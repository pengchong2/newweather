                <!-- android:background="@drawable/time_word_bg" -->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="888px"
                android:layout_height="107px"
                android:layout_marginTop="5px"
                >

                <!-- android:paddingBottom="5dp" -->


                <!-- android:layout_alignBottom="@+id/box2" -->
                <!-- android:background="@drawable/time_word_bg" -->

             <!--   <TextView
                    android:id="@+id/timeSet"
                    android:layout_width="wrap_content"
                    android:layout_height="107px"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text="@string/atimeSetText"
                    android:textColor="@color/white"
                    android:textSize="30px"
                    android:layout_marginLeft="36px"
                    android:visibility="gone"
                    />-->

                <Button
                    android:id="@+id/box2"
                    android:layout_width="888px"
                    android:layout_height="106px"
                    android:background="@drawable/time_settime"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="49px"
                    android:text="@string/atimeSetText"
                    android:textColor="@color/white"
                    android:textSize="30px"
                    android:textAllCaps="false"
                    android:typeface="normal"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="888px"
                android:layout_height="107px"
                android:layout_marginRight="36px"
                >

                <!-- android:paddingBottom="5dp" -->


                <!-- android:visibility="invisible" -->

                <Button
                    android:id="@+id/box3"
                    android:layout_width="157px"
                    android:layout_height="78px"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="21px"
                    android:layout_marginRight="36px"
                    />
                <!--android:background="@drawable/time_set_clock_on"-->

                <TextView
                    android:layout_width="888px"
                    android:layout_height="107px"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text="@string/time_use_gps_time"
                    android:textColor="@color/white"
                    android:textSize="30px"
                    android:layout_marginLeft="36px"
