            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- android:background="@drawable/time_tittle_bg" -->

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="36px"
                android:layout_marginTop="39px"
                android:text="@string/atimeSetText"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="36px" />

            <!--
                 <Button
                android:id="@+id/back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12px"
                android:layout_marginTop="6px"
                android:background="@drawable/time_back_style"
                android:gravity="bottom|center_horizontal" >
            -->

            <Button
                android:id="@+id/back1"
                android:layout_width="101px"
                android:layout_height="79px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19px"
                android:layout_marginTop="33px"
                android:background="@drawable/time_back_style"
                android:gravity="bottom|center_horizontal"
                android:visibility="gone"
                >
            </Button>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="169px"
            android:orientation="vertical"
            android:layout_marginLeft="36px"
            >

            <!-- android:background="@drawable/mengban" -->

            <RelativeLayout
                android:layout_width="888px"
                android:layout_height="107px"
                >

